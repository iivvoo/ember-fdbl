<div class="form-group {{if (v-get model property 'isInvalid') 'has-error' }}">
  <label class="col-sm-2" for={{name}}>{{label}}</label>
  <div class="col-sm-10">

  {{textarea value=(mut (get model property)) placeholder=placeholder
    class='form-control'
    name=name
    rows=rows
    cols=cols}}
  </div>
  {{#if (v-get model property 'isInvalid')}}
    <div class="help-block">
      {{v-get model property 'message'}}
    </div>
  {{/if}}
</div>
