{{#if label}}
  <label class="{{labelClass}}" for={{name}}>{{label}}</label>
{{/if}}
<div class="{{inputClass}}">
  <select {{action "change" on='change'}} class="{{inputClassProp}}">
    {{#each relation_aware_options as |option|}}
      <option value="{{option.value}}" selected={{eq option.value current}}>
        {{#if translate }}
            {{t option.label}}
        {{else}}
            {{option.label}}
        {{/if}}
      </option>
    {{/each}}
  </select>
</div>
{{yield}}
{{#if (v-get model property 'isInvalid')}}
  <div class="help-block">
    {{v-get model property 'message'}}
  </div>
{{/if}}
