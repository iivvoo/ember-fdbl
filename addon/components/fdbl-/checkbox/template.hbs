{{#if label}}
  <label class="{{labelClass}}" for={{name}}>{{label}}</label>
{{/if}}
<div class="{{inputClass}}">
  {{input type=type name=property checked=(mut (get model property))}}
</div>
{{#if showErrorMessage}}
  <div class="help-block">
    {{v-get model property 'message'}}
  </div>
{{/if}}
